{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start",
            "type": "shell",
            "command": "ts-node src/app.ts",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "npm test",
            "group": "test",
            "problemMatcher": ["$jest"],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "tsc",
            "group": "build",
            "problemMatcher": ["$tsc"],
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}